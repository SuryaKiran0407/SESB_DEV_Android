<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textCursorDrawable">@drawable/edittext_cursor_drawable</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorControlNormal">@color/white</item>
        <item name="colorControlActivated">@color/white</item>
        <item name="colorControlHighlight">@color/white</item>
        <item name="android:textColorHint">@color/body_color</item>
        <item name="colorButtonNormal">@color/colorPrimaryDark</item>
        <item name="android:colorButtonNormal">@color/colorPrimary</item>
    </style>

    <!--Style for Checkbox in Login Activity-->
    <style name="MyCheckBox" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/red</item>
        <item name="colorControlActivated">@color/lime</item>
    </style>
    <!--Style for Checkbox in Login Activity-->

    <style name="BrandButtonStyle" parent="Widget.AppCompat.Button.Colored">
        <item name="android:colorButtonNormal">@color/footer_color</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Button1.Style" parent="Theme.AppCompat.Light">
        <item name="colorControlHighlight">@color/lime</item>
        <item name="colorButtonNormal">@color/body_color</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="android:typeface">monospace</item>
    </style>

    <style name="AppCompatAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/footer_color</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:background">@color/body_color</item>
    </style>

    <style name="Dashboard.Button.Style" parent="Theme.AppCompat.Light">
        <item name="colorControlHighlight">@color/body_color</item>
        <item name="colorButtonNormal">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="android:typeface">monospace</item>
    </style>

    <style name="AppTabTextAppearance">
        <item name="android:textSize">18dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:typeface">monospace</item>
        <item name="android:textStyle">bold</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="AppTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">?attr/colorAccent</item>
        <item name="tabIndicatorHeight">4dp</item>
        <item name="tabPaddingStart">6dp</item>
        <item name="tabPaddingEnd">6dp</item>
        <item name="tabBackground">?attr/selectableItemBackground</item>
        <item name="tabTextAppearance">@style/AppTabTextAppearance</item>
        <item name="tabSelectedTextColor">@color/lime</item>
    </style>

    <!--Style for Checkbox-->
    <style name="MyCheckBox1" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/body_color</item>
        <item name="colorControlActivated">@color/dark_green</item>
    </style>
    <!--Style for Checkbox-->

    <style name="TransparentToolbar" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:windowActionBarOverlay">true</item>
        <item name="windowActionBarOverlay">true</item>
        <item name="android:textSize">18dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:typeface">monospace</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="AlertDialogCustom1" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/dark_green</item>
        <item name="android:textColorPrimary">@color/colorPrimary</item>
        <item name="android:background">@color/light_grey</item>
        <item name="android:typeface">monospace</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/right_in</item>
        <item name="android:windowExitAnimation">@anim/left_in</item>
    </style>

    <style name="MyRadioButton" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/light_grey1</item>
        <item name="colorControlActivated">@color/colorAccent</item>
    </style>


    <style name="AppThemeDialog_Dark" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/ic_overlay_transparent</item>
    </style>

</resources>
