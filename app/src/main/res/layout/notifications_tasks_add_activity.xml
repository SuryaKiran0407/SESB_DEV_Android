<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/light_grey">


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="49dp"
        android:gravity="center"
        android:background="@color/colorPrimary"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >
            <com.enstrapp.fieldtekpro.customfont.Font_TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text="@string/task"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:textColor="@color/white"
                android:gravity="center"/>
            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/back_imageview"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_arrow_back_white_24px"
                android:padding="5dp"/>
        </RelativeLayout>
    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical" >

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical"
                android:layout_marginRight="8dp"
                android:layout_marginLeft="8dp">


                <com.enstrapp.fieldtekpro.customfont.Font_TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/tasks_code_group_star"
                    android:textSize="15sp"
                    android:textColor="@color/text_color"
                    android:layout_marginTop="10dp"/>
                <com.enstrapp.fieldtekpro.customfont.Font_Button
                    android:id="@+id/tasks_codegroup_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:textColor="@color/black"
                    android:background="@drawable/blueborder"
                    android:padding="5dp"
                    android:drawableRight="@drawable/ic_arrow_drop_down_blue_24px"
                    android:gravity="left|center"/>




                <com.enstrapp.fieldtekpro.customfont.Font_TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/tasks_code_star"
                    android:textSize="15sp"
                    android:textColor="@color/text_color"
                    android:layout_marginTop="10dp"/>
                <com.enstrapp.fieldtekpro.customfont.Font_Button
                    android:id="@+id/tasks_code_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:textColor="@color/black"
                    android:background="@drawable/blueborder"
                    android:padding="5dp"
                    android:drawableRight="@drawable/ic_arrow_drop_down_blue_24px"
                    android:gravity="left|center"/>




                <com.enstrapp.fieldtekpro.customfont.Font_TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/tasks_text_star"
                    android:textColor="@color/text_color"
                    android:textSize="15sp"
                    android:layout_marginTop="10dp"/>
                <com.enstrapp.fieldtekpro.customfont.Font_Edittext
                    android:id="@+id/task_text_edittext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLength="40"
                    android:textSize="15sp"
                    android:textColor="@color/black"
                    android:background="@drawable/blueborder"
                    android:padding="7dp"/>




                <com.enstrapp.fieldtekpro.customfont.Font_TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/tasks_processor"
                    android:textSize="15sp"
                    android:textColor="@color/text_color"
                    android:layout_marginTop="10dp"/>
                <com.enstrapp.fieldtekpro.customfont.Font_Button
                    android:id="@+id/tasks_processor_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:textColor="@color/black"
                    android:background="@drawable/blueborder"
                    android:padding="5dp"
                    android:drawableRight="@drawable/ic_arrow_drop_down_blue_24px"
                    android:gravity="left|center"/>




                <com.enstrapp.fieldtekpro.customfont.Font_TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/responsible"
                    android:textColor="@color/text_color"
                    android:textSize="15sp"
                    android:layout_marginTop="10dp"/>
                <com.enstrapp.fieldtekpro.customfont.Font_Edittext
                    android:id="@+id/responsible_edittext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLength="12"
                    android:textSize="15sp"
                    android:textColor="@color/black"
                    android:background="@drawable/blueborder"
                    android:padding="7dp"/>




                <com.enstrapp.fieldtekpro.customfont.Font_TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/planned_start_date"
                    android:textSize="15sp"
                    android:textColor="@color/text_color"
                    android:layout_marginTop="10dp"/>
                <com.enstrapp.fieldtekpro.customfont.Font_Button
                    android:id="@+id/start_datetime_button"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:textSize="15sp"
                    android:textColor="@color/black"
                    android:background="@drawable/blueborder"
                    android:padding="5dp"
                    android:drawableRight="@drawable/ic_date_range_black_24px"
                    android:gravity="left|center"/>




                <com.enstrapp.fieldtekpro.customfont.Font_TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/planned_end_date"
                    android:textSize="15sp"
                    android:textColor="@color/text_color"
                    android:layout_marginTop="10dp"/>
                <com.enstrapp.fieldtekpro.customfont.Font_Button
                    android:id="@+id/end_datetime_button"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:textSize="15sp"
                    android:textColor="@color/black"
                    android:background="@drawable/blueborder"
                    android:padding="5dp"
                    android:drawableRight="@drawable/ic_date_range_black_24px"
                    android:gravity="left|center"/>




                <com.enstrapp.fieldtekpro.customfont.Font_TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="@string/status"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:layout_gravity="left"
                    android:layout_marginLeft="10dp"/>
                <RadioGroup
                    android:id="@+id/status_radiogroup"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="10dp">
                    <com.enstrapp.fieldtekpro.customfont.Font_RadioButton
                        android:id="@+id/release_radiobutton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:tag="1"
                        android:text="@string/release"
                        android:textColor="@color/footer_color"
                        android:textSize="14sp"
                        android:theme="@style/CheckBox" />
                    <com.enstrapp.fieldtekpro.customfont.Font_RadioButton
                        android:id="@+id/completed_radiobutton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:tag="2"
                        android:text="@string/compltd"
                        android:textColor="@color/footer_color"
                        android:textSize="14sp"
                        android:theme="@style/CheckBox"
                        android:layout_marginLeft="5dp"/>
                    <com.enstrapp.fieldtekpro.customfont.Font_RadioButton
                        android:id="@+id/success_radiobutton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:tag="3"
                        android:text="@string/success"
                        android:textColor="@color/footer_color"
                        android:textSize="14sp"
                        android:theme="@style/CheckBox"
                        android:layout_marginLeft="5dp"/>
                </RadioGroup>




                <com.enstrapp.fieldtekpro.customfont.Font_TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/completion_datetime"
                    android:textSize="15sp"
                    android:textColor="@color/text_color"
                    android:layout_marginTop="10dp"/>
                <com.enstrapp.fieldtekpro.customfont.Font_Button
                    android:id="@+id/completion_datetime_button"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:textSize="15sp"
                    android:textColor="@color/black"
                    android:background="@drawable/blueborder"
                    android:padding="5dp"
                    android:drawableRight="@drawable/ic_date_range_black_24px"
                    android:gravity="left|center"/>




                <com.enstrapp.fieldtekpro.customfont.Font_TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/completed_by"
                    android:textColor="@color/text_color"
                    android:textSize="15sp"
                    android:layout_marginTop="10dp"/>
                <com.enstrapp.fieldtekpro.customfont.Font_Edittext
                    android:id="@+id/completedby_edittext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLength="12"
                    android:textSize="15sp"
                    android:textColor="@color/black"
                    android:background="@drawable/blueborder"
                    android:padding="7dp"
                    android:enabled="false"
                    android:layout_marginBottom="20dp"/>


            </LinearLayout>

        </ScrollView>

    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:background="@color/footer_color"
        android:orientation="vertical" >
        <LinearLayout android:layout_height="fill_parent" android:layout_width="match_parent">
            <com.enstrapp.fieldtekpro.customfont.Font_Button
                android:id="@+id/cancel_button"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:padding="5dp"
                android:text="@string/cancel"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:gravity="center"
                android:background="@color/footer_color"/>
            <View
                android:layout_width="2dp"
                android:layout_height="20dp"
                android:background="@color/white"
                android:layout_gravity="center"/>
            <com.enstrapp.fieldtekpro.customfont.Font_Button
                android:id="@+id/add_button"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:padding="5dp"
                android:text="@string/add"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:gravity="center"
                android:background="@color/footer_color"/>
        </LinearLayout>
    </LinearLayout>



</LinearLayout>