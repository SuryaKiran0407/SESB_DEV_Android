<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:background="@drawable/blueborder"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <com.enstrapp.fieldtekpro.customfont.Font_TextView
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="0.5"
                    android:gravity="center|left"
                    android:text="@string/permit"
                    android:textColor="@color/light_grey2"
                    android:textSize="14sp" />

                <com.enstrapp.fieldtekpro.customfont.Font_TextView
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="0.1"
                    android:gravity="center|left"
                    android:text="@string/colon"
                    android:textColor="@color/light_grey2"
                    android:textSize="14sp" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="left|center"
                    android:layout_weight="1"
                    android:orientation="horizontal">
                    <com.enstrapp.fieldtekpro.customfont.Font_TextView
                        android:id="@+id/permit_textview"
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight=".9"
                        android:textColor="@color/black"
                        android:textSize="14sp" />
                    <ImageView
                        android:id="@+id/delIssue_iv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:src="@drawable/ic_delete_icon_red"/>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp">

                <com.enstrapp.fieldtekpro.customfont.Font_TextView
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="0.5"
                    android:gravity="center|left"
                    android:text="@string/permittext"
                    android:textColor="@color/light_grey2"
                    android:textSize="14sp" />

                <com.enstrapp.fieldtekpro.customfont.Font_TextView
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="0.1"
                    android:gravity="center|left"
                    android:text="@string/colon"
                    android:textColor="@color/light_grey2"
                    android:textSize="14sp" />

                <com.enstrapp.fieldtekpro.customfont.Font_TextView
                    android:id="@+id/permit_text_textview"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_gravity="left|center"
                    android:layout_weight="1"
                    android:textColor="@color/black"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp">

                <com.enstrapp.fieldtekpro.customfont.Font_TextView
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="0.5"
                    android:gravity="center|left"
                    android:text="Permit Issued"
                    android:textColor="@color/light_grey2"
                    android:textSize="14sp" />

                <com.enstrapp.fieldtekpro.customfont.Font_TextView
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="0.1"
                    android:gravity="center|left"
                    android:text="@string/colon"
                    android:textColor="@color/light_grey2"
                    android:textSize="14sp" />

                <com.enstrapp.fieldtekpro.customfont.Font_Checkbox
                    android:id="@+id/permit_issued_checkbox"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|center"
                    android:layout_weight="1"
                    android:button="@drawable/issue_approval_checbox_on_off" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:focusable="true"
                android:focusableInTouchMode="true">

                <com.enstrapp.fieldtekpro.customfont.Font_TextView
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="0.5"
                    android:gravity="center|left"
                    android:text="Approved By"
                    android:textColor="@color/light_grey2"
                    android:textSize="14sp" />

                <com.enstrapp.fieldtekpro.customfont.Font_TextView
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="0.1"
                    android:gravity="center|left"
                    android:text="@string/colon"
                    android:textColor="@color/light_grey2"
                    android:textSize="14sp" />

                <com.enstrapp.fieldtekpro.customfont.Font_Edittext
                    android:id="@+id/person_name_edittext"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|center"
                    android:layout_weight="1"
                    android:background="@drawable/edittext_border"
                    android:padding="10dp"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp">

                <com.enstrapp.fieldtekpro.customfont.Font_TextView
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="0.5"
                    android:gravity="center|left"
                    android:text="@string/date_time"
                    android:textColor="@color/light_grey2"
                    android:textSize="14sp" />

                <com.enstrapp.fieldtekpro.customfont.Font_TextView
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="0.1"
                    android:gravity="center|left"
                    android:text="@string/colon"
                    android:textColor="@color/light_grey2"
                    android:textSize="14sp" />

                <com.enstrapp.fieldtekpro.customfont.Font_TextView
                    android:id="@+id/date_time_textview"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|center"
                    android:layout_weight="1"
                    android:textColor="@color/black"
                    android:textSize="14sp" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/Geniakt"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/Crname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone" />

    <TextView
        android:id="@+id/Objnr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone" />


</LinearLayout>
