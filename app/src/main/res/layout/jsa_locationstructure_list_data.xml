<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/blueborder"
    android:layout_marginBottom="8dp"
    android:id="@+id/data_layout">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <LinearLayout android:id="@+id/LinearLayout02" android:layout_height="wrap_content" android:layout_width="match_parent">
                <LinearLayout android:layout_width="0dp" android:layout_weight="1.8" android:layout_height="wrap_content" android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content" >
                        <com.enstrapp.fieldtekpro.customfont.Font_TextView
                            android:layout_width="0dp"
                            android:layout_height="fill_parent"
                            android:layout_weight="0.6"
                            android:text="@string/id"
                            android:textColor="@color/light_grey2"
                            android:textSize="14sp"
                            android:gravity="top|left"  />
                        <com.enstrapp.fieldtekpro.customfont.Font_TextView
                            android:layout_width="0dp"
                            android:layout_height="fill_parent"
                            android:layout_weight="0.1"
                            android:text="@string/colon"
                            android:textColor="@color/light_grey2"
                            android:textSize="14sp"
                            android:gravity="top|left"  />
                        <com.enstrapp.fieldtekpro.customfont.Font_TextView
                            android:id="@+id/id_textview"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="top|left"
                            android:textColor="@color/black"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content" >
                        <com.enstrapp.fieldtekpro.customfont.Font_TextView
                            android:layout_width="0dp"
                            android:layout_height="fill_parent"
                            android:layout_weight="0.6"
                            android:text="@string/name"
                            android:textColor="@color/light_grey2"
                            android:textSize="14sp"
                            android:gravity="top|left"  />
                        <com.enstrapp.fieldtekpro.customfont.Font_TextView
                            android:layout_width="0dp"
                            android:layout_height="fill_parent"
                            android:layout_weight="0.1"
                            android:text="@string/colon"
                            android:textColor="@color/light_grey2"
                            android:textSize="14sp"
                            android:gravity="top|left"  />
                        <com.enstrapp.fieldtekpro.customfont.Font_TextView
                            android:id="@+id/name_textview"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="top|left"
                            android:textColor="@color/black"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content" >
                        <com.enstrapp.fieldtekpro.customfont.Font_TextView
                            android:layout_width="0dp"
                            android:layout_height="fill_parent"
                            android:layout_weight="0.6"
                            android:text="@string/loc_type"
                            android:textColor="@color/light_grey2"
                            android:textSize="14sp"
                            android:gravity="top|left" />
                        <com.enstrapp.fieldtekpro.customfont.Font_TextView
                            android:layout_width="0dp"
                            android:layout_height="fill_parent"
                            android:layout_weight="0.1"
                            android:text="@string/colon"
                            android:textColor="@color/light_grey2"
                            android:textSize="14sp"
                            android:gravity="top|left"  />
                        <com.enstrapp.fieldtekpro.customfont.Font_TextView
                            android:id="@+id/loc_type_textview"
                            android:layout_width="0dp"
                            android:layout_height="fill_parent"
                            android:layout_weight="1"
                            android:gravity="top|left"
                            android:textColor="@color/black"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content" >
                        <com.enstrapp.fieldtekpro.customfont.Font_TextView
                            android:layout_width="0dp"
                            android:layout_height="fill_parent"
                            android:layout_weight="0.6"
                            android:text="@string/status"
                            android:textColor="@color/light_grey2"
                            android:textSize="14sp"
                            android:gravity="top|left"  />
                        <com.enstrapp.fieldtekpro.customfont.Font_TextView
                            android:layout_width="0dp"
                            android:layout_height="fill_parent"
                            android:layout_weight="0.1"
                            android:text="@string/colon"
                            android:textColor="@color/light_grey2"
                            android:textSize="14sp"
                            android:gravity="top|left"  />
                        <com.enstrapp.fieldtekpro.customfont.Font_TextView
                            android:id="@+id/status_textview"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="top|left"
                            android:textColor="@color/black"
                            android:textSize="14sp" />
                    </LinearLayout>


                </LinearLayout>
                <LinearLayout android:gravity="center" android:layout_width="0dp" android:layout_weight="0.2" android:layout_height="fill_parent" android:orientation="vertical">
                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/ic_right_arrow_icon"
                        android:padding="4dp"/>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:id="@+id/LocRootRefKey_textview"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:id="@+id/ParRootRefKey_textview"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:id="@+id/RefID_textview"/>

</LinearLayout>