<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/bom_list_data_layout"
    android:background="@drawable/blueborder"
    android:layout_marginTop="8dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <LinearLayout android:layout_height="wrap_content" android:layout_width="match_parent">

            <LinearLayout android:layout_width="0dp" android:layout_weight="1.8" android:layout_height="wrap_content" android:orientation="vertical">
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" >
                    <com.enstrapp.fieldtekpro.customfont.Font_TextView
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="0.6"
                        android:text="@string/notif_type"
                        android:textColor="@color/light_grey2"
                        android:textSize="14sp"
                        android:gravity="left|top" />
                    <com.enstrapp.fieldtekpro.customfont.Font_TextView
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="0.1"
                        android:text="@string/colon"
                        android:textColor="@color/light_grey2"
                        android:textSize="14sp"
                        android:gravity="left|top" />
                    <com.enstrapp.fieldtekpro.customfont.Font_TextView
                        android:id="@+id/notif_type_textview"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="left|top"
                        android:textColor="@color/black"
                        android:textSize="14sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" >
                    <com.enstrapp.fieldtekpro.customfont.Font_TextView
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="0.6"
                        android:text="@string/notif_no"
                        android:textColor="@color/light_grey2"
                        android:textSize="14sp"
                        android:gravity="left|top" />
                    <com.enstrapp.fieldtekpro.customfont.Font_TextView
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="0.1"
                        android:text="@string/colon"
                        android:textColor="@color/light_grey2"
                        android:textSize="14sp"
                        android:gravity="left|top" />
                    <com.enstrapp.fieldtekpro.customfont.Font_TextView
                        android:id="@+id/notif_no_textview"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_gravity="left|top"
                        android:textColor="@color/black"
                        android:textSize="14sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" >
                    <com.enstrapp.fieldtekpro.customfont.Font_TextView
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="0.6"
                        android:text="@string/mal_stdate"
                        android:textColor="@color/light_grey2"
                        android:textSize="14sp"
                        android:gravity="left|top" />
                    <com.enstrapp.fieldtekpro.customfont.Font_TextView
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="0.1"
                        android:text="@string/colon"
                        android:textColor="@color/light_grey2"
                        android:textSize="14sp"
                        android:gravity="left|top" />
                    <com.enstrapp.fieldtekpro.customfont.Font_TextView
                        android:id="@+id/mal_stdate_textview"
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:gravity="left|top"
                        android:textColor="@color/black"
                        android:textSize="14sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" >
                    <com.enstrapp.fieldtekpro.customfont.Font_TextView
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="0.6"
                        android:text="@string/enddate"
                        android:textColor="@color/light_grey2"
                        android:textSize="14sp"
                        android:gravity="left|top" />
                    <com.enstrapp.fieldtekpro.customfont.Font_TextView
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="0.1"
                        android:text="@string/colon"
                        android:textColor="@color/light_grey2"
                        android:textSize="14sp"
                        android:gravity="left|top" />
                    <com.enstrapp.fieldtekpro.customfont.Font_TextView
                        android:id="@+id/enddate_textview"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="left|top"
                        android:textColor="@color/black"
                        android:textSize="14sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" >
                    <com.enstrapp.fieldtekpro.customfont.Font_TextView
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="0.6"
                        android:text="@string/order_num"
                        android:textColor="@color/light_grey2"
                        android:textSize="14sp"
                        android:gravity="left|top" />
                    <com.enstrapp.fieldtekpro.customfont.Font_TextView
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="0.1"
                        android:text="@string/colon"
                        android:textColor="@color/light_grey2"
                        android:textSize="14sp"
                        android:gravity="left|top" />
                    <com.enstrapp.fieldtekpro.customfont.Font_TextView
                        android:id="@+id/order_num_textview"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="left|top"
                        android:textColor="@color/black"
                        android:textSize="14sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" >
                    <com.enstrapp.fieldtekpro.customfont.Font_TextView
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="0.6"
                        android:text="@string/priority"
                        android:textColor="@color/light_grey2"
                        android:textSize="14sp"
                        android:gravity="left|top" />
                    <com.enstrapp.fieldtekpro.customfont.Font_TextView
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="0.1"
                        android:text="@string/colon"
                        android:textColor="@color/light_grey2"
                        android:textSize="14sp"
                        android:gravity="left|top" />
                    <com.enstrapp.fieldtekpro.customfont.Font_TextView
                        android:id="@+id/priority_textview"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="left|top"
                        android:textColor="@color/black"
                        android:textSize="14sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" >
                    <com.enstrapp.fieldtekpro.customfont.Font_TextView
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="0.6"
                        android:text="@string/short_text"
                        android:textColor="@color/light_grey2"
                        android:textSize="14sp"
                        android:gravity="left|top" />
                    <com.enstrapp.fieldtekpro.customfont.Font_TextView
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="0.1"
                        android:text="@string/colon"
                        android:textColor="@color/light_grey2"
                        android:textSize="14sp"
                        android:gravity="left|top" />
                    <com.enstrapp.fieldtekpro.customfont.Font_TextView
                        android:id="@+id/short_text_textview"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="left|top"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:singleLine="true"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" >
                    <com.enstrapp.fieldtekpro.customfont.Font_TextView
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="0.6"
                        android:text="@string/comp_date"
                        android:textColor="@color/light_grey2"
                        android:textSize="14sp"
                        android:gravity="left|top" />
                    <com.enstrapp.fieldtekpro.customfont.Font_TextView
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="0.1"
                        android:text="@string/colon"
                        android:textColor="@color/light_grey2"
                        android:textSize="14sp"
                        android:gravity="left|top" />
                    <com.enstrapp.fieldtekpro.customfont.Font_TextView
                        android:id="@+id/comp_date_textview"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="left|top"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:singleLine="true"/>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>