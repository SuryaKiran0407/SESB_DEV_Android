<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_grey"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/colorPrimary"
        android:orientation="horizontal">
        <com.enstrapp.fieldtekpro.customfont.Font_TextView
            android:id="@+id/title_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:textColor="@color/white"
            android:textSize="18sp" />
        <ImageButton
            android:id="@+id/back_imageview"
            android:layout_width="@dimen/default_icon_size"
            android:layout_height="@dimen/default_icon_size"
            android:layout_marginStart="@dimen/toolbar_icon_margin"
            android:layout_marginTop="@dimen/toolbar_icon_margin"
            android:background="@color/colorPrimary"
            android:src="@drawable/ic_arrow_back_white_24px" />
    </RelativeLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/footer_ll"
        android:layout_below="@id/header"
        android:fillViewport="true"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="5dp">


            <com.enstrapp.fieldtekpro.customfont.Font_TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Equipment No."
                android:textSize="14sp"
                android:textColor="@color/text_color"
                android:visibility="gone"/>
            <com.enstrapp.fieldtekpro.customfont.Font_Button
                android:id="@+id/equi_id_button"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:background="@drawable/bluedashborder"
                android:padding="5dp"
                android:enabled="false"
                android:visibility="gone"
                android:gravity="left|center"/>



            <com.enstrapp.fieldtekpro.customfont.Font_TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name"
                android:textSize="14sp"
                android:textColor="@color/text_color"/>
            <com.enstrapp.fieldtekpro.customfont.Font_Button
                android:id="@+id/equi_text_button"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:background="@drawable/bluedashborder"
                android:padding="5dp"
                android:enabled="false"
                android:gravity="left|center"/>



            <com.enstrapp.fieldtekpro.customfont.Font_TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Functional Location"
                android:textSize="14sp"
                android:textColor="@color/text_color"
                android:layout_marginTop="5dp"/>
            <com.enstrapp.fieldtekpro.customfont.Font_Button
                android:id="@+id/floc_id_button"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:background="@drawable/bluedashborder"
                android:padding="5dp"
                android:enabled="false"
                android:gravity="left|center"/>


            <com.enstrapp.fieldtekpro.customfont.Font_TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Object Type"
            android:textSize="14sp"
            android:textColor="@color/text_color"
            android:layout_marginTop="5dp"
            android:visibility="gone"/>
            <com.enstrapp.fieldtekpro.customfont.Font_Button
                android:id="@+id/object_type_button"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:background="@drawable/bluedashborder"
                android:padding="5dp"
                android:enabled="false"
                android:visibility="gone"
                android:gravity="left|center"/>


            <com.enstrapp.fieldtekpro.customfont.Font_TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Manufacturer"
                android:textColor="@color/text_color"
                android:textSize="14sp"
                android:layout_marginTop="5dp"/>
            <com.enstrapp.fieldtekpro.customfont.Font_Edittext
                android:id="@+id/manufacturer_edittext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLength="40"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:background="@drawable/blueborder"
                android:padding="7dp"/>



            <com.enstrapp.fieldtekpro.customfont.Font_TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Model No"
                android:textColor="@color/text_color"
                android:textSize="14sp"
                android:layout_marginTop="5dp"/>
            <com.enstrapp.fieldtekpro.customfont.Font_Edittext
                android:id="@+id/modelno_edittext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLength="40"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:background="@drawable/blueborder"
                android:padding="7dp"/>



            <com.enstrapp.fieldtekpro.customfont.Font_TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Manufacturer Part No."
                android:textColor="@color/text_color"
                android:textSize="14sp"
                android:layout_marginTop="5dp"/>
            <com.enstrapp.fieldtekpro.customfont.Font_Edittext
                android:id="@+id/mpo_edittext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLength="40"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:background="@drawable/blueborder"
                android:padding="7dp"/>



            <com.enstrapp.fieldtekpro.customfont.Font_TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Manufacturer Serial No"
                android:textColor="@color/text_color"
                android:textSize="14sp"
                android:layout_marginTop="5dp"/>
            <com.enstrapp.fieldtekpro.customfont.Font_Edittext
                android:id="@+id/mso_edittext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLength="40"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:background="@drawable/blueborder"
                android:padding="7dp"/>



            <com.enstrapp.fieldtekpro.customfont.Font_TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Manufacturer Country"
                android:textColor="@color/text_color"
                android:textSize="14sp"
                android:layout_marginTop="5dp"/>
            <com.enstrapp.fieldtekpro.customfont.Font_Edittext
                android:id="@+id/mc_edittext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLength="3"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:background="@drawable/blueborder"
                android:padding="7dp"/>



            <LinearLayout android:layout_height="wrap_content" android:layout_width="match_parent">
                <LinearLayout android:layout_width="0dp" android:layout_weight="1" android:layout_height="wrap_content" android:orientation="vertical">
                    <com.enstrapp.fieldtekpro.customfont.Font_TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Construction Year"
                        android:textColor="@color/text_color"
                        android:textSize="14sp"
                        android:layout_marginTop="5dp"/>
                    <com.enstrapp.fieldtekpro.customfont.Font_Edittext
                        android:id="@+id/cym_edittext"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:maxLength="4"
                        android:textSize="14sp"
                        android:textColor="@color/black"
                        android:inputType="number"
                        android:background="@drawable/blueborder"
                        android:padding="7dp"/>
                </LinearLayout>
                <LinearLayout android:layout_marginLeft="5dp" android:layout_width="0dp" android:layout_weight="1" android:layout_height="wrap_content" android:orientation="vertical">
                    <com.enstrapp.fieldtekpro.customfont.Font_TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Construction Month"
                        android:textColor="@color/text_color"
                        android:textSize="14sp"
                        android:layout_marginTop="5dp"/>
                    <com.enstrapp.fieldtekpro.customfont.Font_Edittext
                        android:id="@+id/cm_edittext"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:maxLength="2"
                        android:textSize="14sp"
                        android:inputType="number"
                        android:textColor="@color/black"
                        android:background="@drawable/blueborder"
                        android:padding="7dp"/>
                </LinearLayout>
            </LinearLayout>






        </LinearLayout>
    </ScrollView>



    <LinearLayout
        android:id="@+id/footer_ll"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_alignParentBottom="true"
        android:background="@color/colorPrimary"
        android:orientation="horizontal"
        android:weightSum="2">
        <com.enstrapp.fieldtekpro.customfont.Font_Button
            android:id="@+id/cancel_button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.995"
            android:background="@color/colorPrimary"
            android:text="Cancel"
            android:textColor="@color/white"
            android:textSize="15sp" />
        <View
            android:layout_width="0dp"
            android:layout_height="24dp"
            android:layout_marginTop="12dp"
            android:layout_weight=".01"
            android:background="@color/white" />
        <com.enstrapp.fieldtekpro.customfont.Font_Button
            android:id="@+id/submit_button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.995"
            android:background="@color/colorPrimary"
            android:text="@string/submit"
            android:textColor="@color/white"
            android:textSize="15sp" />
    </LinearLayout>
</RelativeLayout>