<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" 
    android:background="@drawable/blueborder"
    android:padding="5dp"
    android:id="@+id/data_layout"
	android:layout_marginTop="8dp">

    <LinearLayout  android:layout_height="wrap_content" android:layout_width="match_parent">
        <LinearLayout android:layout_width="wrap_content" android:layout_height="match_parent">
			<CheckBox
				android:id="@+id/checkbox"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="center"/>
        </LinearLayout>

        <LinearLayout android:layout_marginLeft="5dp" android:layout_width="0dp" android:layout_weight="1" android:layout_height="wrap_content" android:orientation="vertical">
            
            <LinearLayout  android:layout_height="wrap_content" android:layout_width="match_parent">

		        <LinearLayout android:layout_marginLeft="5dp" android:layout_width="0dp" android:layout_weight="2" android:layout_height="wrap_content" android:orientation="vertical">

					<LinearLayout
						android:layout_width="fill_parent"
						android:layout_height="wrap_content" >
						<com.enstrapp.fieldtekpro.customfont.Font_TextView
							android:layout_width="0dp"
							android:layout_height="fill_parent"
							android:layout_weight="0.5"
							android:text="@string/tasks_code_group"
							android:textColor="@color/light_grey2"
							android:textSize="13sp"
							android:gravity="left|top" />
						<com.enstrapp.fieldtekpro.customfont.Font_TextView
							android:layout_width="0dp"
							android:layout_height="fill_parent"
							android:layout_weight="0.1"
							android:text="@string/colon"
							android:textColor="@color/light_grey2"
							android:textSize="13sp"
							android:gravity="left|top" />
						<com.enstrapp.fieldtekpro.customfont.Font_TextView
							android:id="@+id/tasks_code_group_textview"
							android:layout_width="0dp"
							android:layout_height="fill_parent"
							android:layout_weight="1"
							android:gravity="left|top"
							android:textColor="@color/black"
							android:textSize="13sp" />
					</LinearLayout>


					<LinearLayout
						android:layout_width="fill_parent"
						android:layout_height="wrap_content" >
						<com.enstrapp.fieldtekpro.customfont.Font_TextView
							android:layout_width="0dp"
							android:layout_height="fill_parent"
							android:layout_weight="0.5"
							android:text="@string/tasks_code"
							android:textColor="@color/light_grey2"
							android:textSize="13sp"
							android:gravity="left|top" />
						<com.enstrapp.fieldtekpro.customfont.Font_TextView
							android:layout_width="0dp"
							android:layout_height="fill_parent"
							android:layout_weight="0.1"
							android:text="@string/colon"
							android:textColor="@color/light_grey2"
							android:textSize="13sp"
							android:gravity="left|top" />
						<com.enstrapp.fieldtekpro.customfont.Font_TextView
							android:id="@+id/tasks_code_textview"
							android:layout_width="0dp"
							android:layout_height="fill_parent"
							android:layout_weight="1"
							android:gravity="left|top"
							android:textColor="@color/black"
							android:textSize="13sp" />
					</LinearLayout>


					<LinearLayout
						android:layout_width="fill_parent"
						android:layout_height="wrap_content"
						android:visibility="gone">
						<com.enstrapp.fieldtekpro.customfont.Font_TextView
							android:layout_width="0dp"
							android:layout_height="fill_parent"
							android:layout_weight="0.5"
							android:text="@string/tasks_text"
							android:textColor="@color/light_grey2"
							android:textSize="13sp"
							android:gravity="left|top" />
						<com.enstrapp.fieldtekpro.customfont.Font_TextView
							android:layout_width="0dp"
							android:layout_height="fill_parent"
							android:layout_weight="0.1"
							android:text="@string/colon"
							android:textColor="@color/light_grey2"
							android:textSize="13sp"
							android:gravity="left|top" />
						<com.enstrapp.fieldtekpro.customfont.Font_TextView
							android:id="@+id/tasks_text_textview"
							android:layout_width="0dp"
							android:layout_height="fill_parent"
							android:layout_weight="1"
							android:gravity="left|top"
							android:textColor="@color/black"
							android:textSize="13sp" />
					</LinearLayout>


					<LinearLayout
						android:layout_width="fill_parent"
						android:layout_height="wrap_content" >
						<com.enstrapp.fieldtekpro.customfont.Font_TextView
							android:layout_width="0dp"
							android:layout_height="fill_parent"
							android:layout_weight="0.5"
							android:text="@string/planned_start_date1"
							android:textColor="@color/light_grey2"
							android:textSize="13sp"
							android:gravity="left|top" />
						<com.enstrapp.fieldtekpro.customfont.Font_TextView
							android:layout_width="0dp"
							android:layout_height="fill_parent"
							android:layout_weight="0.1"
							android:text="@string/colon"
							android:textColor="@color/light_grey2"
							android:textSize="13sp"
							android:gravity="left|top" />
						<com.enstrapp.fieldtekpro.customfont.Font_TextView
							android:id="@+id/planned_start_date_textview"
							android:layout_width="0dp"
							android:layout_height="fill_parent"
							android:layout_weight="1"
							android:gravity="left|top"
							android:textColor="@color/black"
							android:textSize="13sp" />
					</LinearLayout>


					<RadioGroup
						android:id="@+id/status_radiogroup"
						android:layout_width="fill_parent"
						android:layout_height="wrap_content"
						android:orientation="horizontal">
						<com.enstrapp.fieldtekpro.customfont.Font_RadioButton
							android:id="@+id/release_radiobutton"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:layout_gravity="start"
							android:tag="1"
							android:text="@string/release"
							android:textColor="@color/light_grey1"
							android:textSize="13sp"
							android:theme="@style/CheckBox"
							android:enabled="false"/>
						<com.enstrapp.fieldtekpro.customfont.Font_RadioButton
							android:id="@+id/completed_radiobutton"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:layout_gravity="start"
							android:tag="2"
							android:text="@string/compltd"
							android:textColor="@color/light_grey1"
							android:textSize="13sp"
							android:theme="@style/CheckBox"
							android:layout_marginLeft="5dp"
							android:enabled="false"/>
						<com.enstrapp.fieldtekpro.customfont.Font_RadioButton
							android:id="@+id/success_radiobutton"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:layout_gravity="start"
							android:tag="3"
							android:text="@string/success"
							android:textColor="@color/light_grey1"
							android:textSize="13sp"
							android:theme="@style/CheckBox"
							android:layout_marginLeft="5dp"
							android:enabled="false"/>
					</RadioGroup>


		        </LinearLayout>

		        <LinearLayout android:layout_width="wrap_content" android:layout_height="fill_parent" android:orientation="vertical">
		           	<ImageView
                        android:gravity="center"
		           	    android:layout_width="33dp" android:layout_height="fill_parent" android:padding="5dp" android:src="@drawable/ic_right_arrow_icon"/>
		        </LinearLayout>

		    </LinearLayout>


			<TextView
				android:id="@+id/st_date" android:visibility="gone"
				android:layout_width="0dp"
				android:layout_height="0dp"/>

			<TextView
				android:id="@+id/st_time" android:visibility="gone"
				android:layout_width="0dp"
				android:layout_height="0dp"/>

			<TextView
				android:id="@+id/end_date" android:visibility="gone"
				android:layout_width="0dp"
				android:layout_height="0dp"/>

			<TextView
				android:id="@+id/end_time" android:visibility="gone"
				android:layout_width="0dp"
				android:layout_height="0dp"/>

			<TextView
				android:id="@+id/event_id" android:visibility="gone"
				android:layout_width="0dp"
				android:layout_height="0dp"/>

			<TextView
				android:id="@+id/event_text" android:visibility="gone"
				android:layout_width="0dp"
				android:layout_height="0dp"/>

			<TextView
				android:id="@+id/event_code_id" android:visibility="gone"
				android:layout_width="0dp"
				android:layout_height="0dp"/>

			<TextView
				android:id="@+id/event_code_text" android:visibility="gone"
				android:layout_width="0dp"
				android:layout_height="0dp"/>

			<TextView
				android:id="@+id/event_desc" android:visibility="gone"
				android:layout_width="0dp"
				android:layout_height="0dp"/>

			<TextView
				android:id="@+id/cause_id" android:visibility="gone"
				android:layout_width="0dp"
				android:layout_height="0dp"/>

			<TextView
				android:id="@+id/cause_text" android:visibility="gone"
				android:layout_width="0dp"
				android:layout_height="0dp"/>

			<TextView
				android:id="@+id/causecode_id" android:visibility="gone"
				android:layout_width="0dp"
				android:layout_height="0dp"/>

			<TextView
				android:id="@+id/causecode_text" android:visibility="gone"
				android:layout_width="0dp"
				android:layout_height="0dp"/>

			<TextView
				android:id="@+id/causecode_desc" android:visibility="gone"
				android:layout_width="0dp"
				android:layout_height="0dp"/>

			<TextView
				android:id="@+id/item_key" android:visibility="gone"
				android:layout_width="0dp"
				android:layout_height="0dp"/>

			<TextView
				android:id="@+id/cause_key" android:visibility="gone"
				android:layout_width="0dp"
				android:layout_height="0dp"/>

        </LinearLayout>
        
    </LinearLayout>

</LinearLayout>
