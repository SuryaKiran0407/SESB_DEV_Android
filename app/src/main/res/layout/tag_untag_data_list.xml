<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/data_ll"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp"
    android:layout_marginBottom="8dp"
    android:background="@drawable/blueborder"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.enstrapp.fieldtekpro.customfont.Font_TextView
            android:layout_width="45dp"
            android:layout_height="fill_parent"
            android:gravity="left|top"
            android:text="@string/og"
            android:textColor="@color/light_grey2"
            android:textSize="14sp" />

        <com.enstrapp.fieldtekpro.customfont.Font_TextView
            android:layout_width="20dp"
            android:layout_height="fill_parent"
            android:gravity="left|top"
            android:text="@string/colon"
            android:textColor="@color/light_grey2"
            android:textSize="14sp" />

        <com.enstrapp.fieldtekpro.customfont.Font_TextView
            android:id="@+id/og_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left|top"
            android:textColor="@color/black"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.enstrapp.fieldtekpro.customfont.Font_TextView
            android:layout_width="45dp"
            android:layout_height="fill_parent"
            android:gravity="left|top"
            android:text="@string/tag_cond."
            android:textColor="@color/light_grey2"
            android:textSize="14sp" />

        <com.enstrapp.fieldtekpro.customfont.Font_TextView
            android:layout_width="20dp"
            android:layout_height="fill_parent"
            android:gravity="left|top"
            android:text="@string/colon"
            android:textColor="@color/light_grey2"
            android:textSize="14sp" />

        <com.enstrapp.fieldtekpro.customfont.Font_TextView
            android:id="@+id/tagCond_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left|top"
            android:textColor="@color/black"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.enstrapp.fieldtekpro.customfont.Font_TextView
            android:layout_width="45dp"
            android:layout_height="fill_parent"
            android:gravity="left|top"
            android:text="@string/untag_cond."
            android:textColor="@color/light_grey2"
            android:textSize="14sp" />

        <com.enstrapp.fieldtekpro.customfont.Font_TextView
            android:layout_width="20dp"
            android:layout_height="fill_parent"
            android:gravity="left|top"
            android:text="@string/colon"
            android:textColor="@color/light_grey2"
            android:textSize="14sp" />

        <com.enstrapp.fieldtekpro.customfont.Font_TextView
            android:id="@+id/unTagCond_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left|top"
            android:textColor="@color/black"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.enstrapp.fieldtekpro.customfont.Font_TextView
            android:layout_width="45dp"
            android:layout_height="fill_parent"
            android:gravity="left|top"
            android:text="@string/description"
            android:textColor="@color/light_grey2"
            android:textSize="14sp" />

        <com.enstrapp.fieldtekpro.customfont.Font_TextView
            android:layout_width="20dp"
            android:layout_height="fill_parent"
            android:gravity="left|top"
            android:text="@string/colon"
            android:textColor="@color/light_grey2"
            android:textSize="14sp" />

        <com.enstrapp.fieldtekpro.customfont.Font_TextView
            android:id="@+id/desc_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left|top"
            android:textColor="@color/black"
            android:textSize="14sp" />
    </LinearLayout>


</LinearLayout>