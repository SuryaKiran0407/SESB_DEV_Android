<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="@color/light_grey"
	android:padding="10dp">

    <com.enstrapp.fieldtekpro.customfont.Font_TextView
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textSize="15sp"
	        android:padding="10dp"
	        android:layout_gravity="center"
	        android:layout_margin="10dp"
	        android:gravity="center"
	        android:text="Please enter message"
			android:textColor="@color/black"/>

	<com.enstrapp.fieldtekpro.customfont.Font_Edittext
		android:id="@+id/message_edittext"
		android:layout_width="300dp"
		android:layout_height="wrap_content"
		android:minLines="7"
		android:background="@drawable/blueborder"
		android:textSize="15sp"
		android:gravity="top|left"
		android:padding="10dp"
		android:layout_gravity="center"
		android:maxLength="300"/>

	<com.enstrapp.fieldtekpro.customfont.Font_TextView
		android:id="@+id/count_textview"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:textSize="15sp"
		android:layout_gravity="left"
		android:layout_marginTop="10dp"
		android:layout_marginLeft="5dp"
		android:gravity="left"
		android:text="You have 300 characters left"
		android:textColor="@color/red"/>

	<LinearLayout android:layout_gravity="center" android:layout_marginTop="10dp" android:layout_height="wrap_content" android:layout_width="300dp" android:background="@color/dark_grey">
		<com.enstrapp.fieldtekpro.customfont.Font_Button
            android:textColor="@color/white" android:textSize="16sp" android:id="@+id/cancel_button" android:background="@color/colorPrimary" android:text="@string/cancel" android:layout_width="0dp" android:layout_weight="1" android:layout_height="40dp"></com.enstrapp.fieldtekpro.customfont.Font_Button>
		<View android:background="@color/white" android:layout_width="1dp" android:layout_height="20dp"
			android:layout_gravity="center"/>
		<com.enstrapp.fieldtekpro.customfont.Font_Button
            android:textColor="@color/white"  android:textSize="16sp" android:id="@+id/send_button" android:background="@color/colorPrimary" android:text="@string/send" android:layout_width="0dp" android:layout_weight="1" android:layout_height="40dp"></com.enstrapp.fieldtekpro.customfont.Font_Button>
	</LinearLayout>

</LinearLayout>
