<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/light_grey">


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="49dp"
        android:gravity="center"
        android:background="@color/colorPrimary"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >
            <com.enstrapp.fieldtekpro.customfont.Font_TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text="@string/activity"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:textColor="@color/white"
                android:gravity="center"/>
            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/back_imageview"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_arrow_back_white_24px"
                android:padding="5dp"/>
        </RelativeLayout>
    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical" >

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp">


                <com.enstrapp.fieldtekpro.customfont.Font_TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/item_key_star"
                    android:textSize="15sp"
                    android:textColor="@color/text_color"
                    android:layout_marginTop="10dp"/>
                <com.enstrapp.fieldtekpro.customfont.Font_Button
                    android:id="@+id/itemkey_button"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:textSize="15sp"
                    android:textColor="@color/black"
                    android:background="@drawable/blueborder"
                    android:padding="5dp"
                    android:gravity="left|center"
                    android:drawableRight="@drawable/ic_arrow_drop_down_blue_24px"/>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/textInputSideMargins"
                    android:layout_marginStart="@dimen/textInputSideMargins"
                    android:layout_marginTop="@dimen/textInputTopMargin"
                    android:background="@drawable/bluedashborder"
                    android:orientation="horizontal"
                    android:weightSum="1"
                    android:visibility="gone">
                    <android.support.design.widget.TextInputLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".9"
                        android:paddingEnd="@dimen/textInputSidePadd"
                        android:paddingStart="@dimen/textInputSidePadd"
                        android:paddingTop="@dimen/textInputTopPadd"
                        android:textColorHint="@color/colorPrimary"
                        app:hintTextAppearance="@style/TextAppearence.App.TextInputLayout">
                        <com.enstrapp.fieldtekpro.customfont.Font_TextInputEditText
                            android:id="@+id/objectpart_edittext"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:backgroundTint="@android:color/transparent"
                            android:cursorVisible="false"
                            android:focusable="false"
                            android:hint="@string/obj_part1"
                            android:inputType="text"
                            android:maxLines="1"
                            android:textSize="@dimen/textSize" />
                    </android.support.design.widget.TextInputLayout>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/textInputSideMargins"
                    android:layout_marginStart="@dimen/textInputSideMargins"
                    android:layout_marginTop="@dimen/textInputTopMargin"
                    android:background="@drawable/bluedashborder"
                    android:orientation="horizontal"
                    android:weightSum="1"
                    android:visibility="gone">
                    <android.support.design.widget.TextInputLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".9"
                        android:paddingEnd="@dimen/textInputSidePadd"
                        android:paddingStart="@dimen/textInputSidePadd"
                        android:paddingTop="@dimen/textInputTopPadd"
                        android:textColorHint="@color/colorPrimary"
                        app:hintTextAppearance="@style/TextAppearence.App.TextInputLayout">
                        <com.enstrapp.fieldtekpro.customfont.Font_TextInputEditText
                            android:id="@+id/event_edittext"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:backgroundTint="@android:color/transparent"
                            android:cursorVisible="false"
                            android:focusable="false"
                            android:hint="@string/event1"
                            android:inputType="text"
                            android:maxLines="1"
                            android:textSize="@dimen/textSize" />
                    </android.support.design.widget.TextInputLayout>
                </LinearLayout>



                <com.enstrapp.fieldtekpro.customfont.Font_TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/code_group_star"
                    android:textSize="15sp"
                    android:textColor="@color/text_color"
                    android:layout_marginTop="10dp"/>
                <com.enstrapp.fieldtekpro.customfont.Font_Button
                    android:id="@+id/codegroup_button"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:textSize="15sp"
                    android:textColor="@color/black"
                    android:background="@drawable/blueborder"
                    android:padding="5dp"
                    android:gravity="left|center"
                    android:drawableRight="@drawable/ic_arrow_drop_down_blue_24px"/>



                <com.enstrapp.fieldtekpro.customfont.Font_TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/code_star"
                    android:textSize="15sp"
                    android:textColor="@color/text_color"
                    android:layout_marginTop="10dp"/>
                <com.enstrapp.fieldtekpro.customfont.Font_Button
                    android:id="@+id/code_button"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:textSize="15sp"
                    android:textColor="@color/black"
                    android:background="@drawable/blueborder"
                    android:padding="5dp"
                    android:gravity="left|center"
                    android:drawableRight="@drawable/ic_arrow_drop_down_blue_24px"/>




                <com.enstrapp.fieldtekpro.customfont.Font_TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/text"
                    android:textColor="@color/text_color"
                    android:textSize="15sp"
                    android:layout_marginTop="10dp"/>
                <com.enstrapp.fieldtekpro.customfont.Font_Edittext
                    android:id="@+id/text_edittext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLength="40"
                    android:textSize="15sp"
                    android:textColor="@color/black"
                    android:background="@drawable/blueborder"
                    android:padding="7dp"/>




                <com.enstrapp.fieldtekpro.customfont.Font_TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/start_date"
                    android:textSize="15sp"
                    android:textColor="@color/text_color"
                    android:layout_marginTop="10dp"/>
                <com.enstrapp.fieldtekpro.customfont.Font_Button
                    android:id="@+id/start_datetime_button"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:textSize="15sp"
                    android:textColor="@color/black"
                    android:background="@drawable/blueborder"
                    android:padding="5dp"
                    android:drawableRight="@drawable/ic_date_range_black_24px"
                    android:gravity="left|center"/>





                <com.enstrapp.fieldtekpro.customfont.Font_TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/end_date"
                    android:textSize="15sp"
                    android:textColor="@color/text_color"
                    android:layout_marginTop="10dp"/>
                <com.enstrapp.fieldtekpro.customfont.Font_Button
                    android:id="@+id/end_datetime_button"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:textSize="15sp"
                    android:textColor="@color/black"
                    android:background="@drawable/blueborder"
                    android:padding="5dp"
                    android:drawableRight="@drawable/ic_date_range_black_24px"
                    android:gravity="left|center"/>



            </LinearLayout>

        </ScrollView>

    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:background="@color/footer_color"
        android:orientation="vertical" >
        <LinearLayout android:layout_height="fill_parent" android:layout_width="match_parent">
            <com.enstrapp.fieldtekpro.customfont.Font_Button
                android:id="@+id/cancel_button"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:padding="5dp"
                android:text="@string/cancel"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:gravity="center"
                android:background="@color/footer_color"/>
            <View
                android:layout_width="2dp"
                android:layout_height="20dp"
                android:background="@color/white"
                android:layout_gravity="center"/>
            <com.enstrapp.fieldtekpro.customfont.Font_Button
                android:id="@+id/add_button"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:padding="5dp"
                android:text="@string/add"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:gravity="center"
                android:background="@color/footer_color"/>
        </LinearLayout>
    </LinearLayout>



</LinearLayout>